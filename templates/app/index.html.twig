{% extends 'base.html.twig' %}

{% block title %}Liste des Restaurants
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

		<ol>
			{% for restaurant in restaurants %}

				<li>
					{{restaurant.name | upper}}
					(Moyenne de
					{{ restaurant.averageRating | number_format(2, ',') }})
					<br>
					<small>
						{{restaurant.description}}
					</small>
				</li>

			{% endfor %}
		</ol>

	</div>
{% endblock %}
